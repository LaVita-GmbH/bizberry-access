    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pegasus: Python: Uvicorn ASGI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "args": [
                "pegasus.asgi:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "env": {
                "DEBUG": "true",
                "SENTRY_DSN": "https://8717cb6b6a72485591dc3a5db3690f59@sentry.lavita.io/11"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "env": {
                "DEBUG": "true",
                "SENTRY_DSN": "https://8717cb6b6a72485591dc3a5db3690f59@sentry.lavita.io/11"
            },
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django Shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "apply_scopes"
            ],
            "env": {
                "DEBUG": "true",
                "SENTRY_DSN": "https://8717cb6b6a72485591dc3a5db3690f59@sentry.lavita.io/11"
            },
            "django": true,
            "justMyCode": false
        }
    ]
}